extends base.pug

block content 
    
    if isEmpty
        h2.text-danger there is no item in this category. 
    else
        
        each row in rows
            .products
                .product-card
                    form(id = 'prct')
                        .product-image
                            img(src='../images/products' + row.ImgUrl)
                            .product-info( id ='prct')
                                h4(id='name') #{row.NAME}
                                h6(id='price') #{row.PRICE}$
                                p( id='description') #{row.DESCRIPTION}
                                -var r = JSON.stringify(row)
                                button(class='btn  search-btn ' id='AddToCar'  onclick="AddToCart("+r + ")" ) Add to Cart
    

            
    <script type='text/javascript' src="../js/CartItems.js"> </script>
    