extends base.pug

block content
    - var x = (rows.length === 0 ) ? true : false ;  
    if x 
        h2.text-danger No Item matching this name. 
    else
        .products
        each row in rows
                .product-card
                        .product-image
                            img(src='../images/products' + row.ImgUrl)
                            .product-info( id ='prct')
                                a(id='name') #{row.NAME}
                                br
                                a(id='price') #{row.PRICE}$
                                br
                                p( id='description') #{row.DESCRIPTION}
                                -var r = JSON.stringify(row)
                                button(class='btn  search-btn ' id='AddToCar' data-id= r) Add to Cart